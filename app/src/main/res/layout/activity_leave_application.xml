<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.view.activites.LeaveApplicationActivity">
    <include layout="@layout/layout_toolbar1"
        android:id="@+id/layout_tool"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_tool"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click To Select Date"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_background"
            android:textColor="@color/white"
            android:padding="10dp"
            android:visibility="gone"
            android:id="@+id/btnSelectDate"/>
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/walletLayout"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/layoutFrom"
                android:background="@drawable/icon_background">
                <TextView
                    android:id="@+id/tvFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:text="From"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
                <TableRow android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-40dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/ic_calendar_white"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/layoutTo"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_background">
                <TextView
                    android:id="@+id/tvTo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:text="To"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
                <TableRow android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-40dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_calendar_white"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reason"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:id="@+id/etNote"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/icon_background"
            android:id="@+id/btnSubmit"/>
    </LinearLayout>
</RelativeLayout>