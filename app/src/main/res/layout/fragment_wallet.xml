<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDescription.view.WalletFragment">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Total"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="$100000"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:id="@+id/layoutFrom"
            android:background="@drawable/icon_background">
            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:text="From"
                android:textColor="@color/white"
android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                />
            <TableRow android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_calendar_today_24"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/layoutTo"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_background">
            <TextView
                android:id="@+id/tvTo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
               android:gravity="center_vertical"
                android:textSize="10dp"
                android:text="To"
                android:textColor="@color/white"

                android:layout_marginLeft="5dp"
                />
            <TableRow android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_background">


                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:spinnerMode="dropdown" />
            <TableRow android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-30dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_circle_down_solid" />

           <!-- <Spinner
                android:id="@+id/tvTransction"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
              android:gravity="center_vertical"
                android:text="last 15 t"
                android:textColor="@color/white"

                android:textSize="10dp" />
            <TableRow android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_circle_down_solid"
                android:layout_marginRight="5dp"
                />-->
        </LinearLayout>

    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="10dp"
     android:layout_below="@id/top"
     >
     <androidx.recyclerview.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/rvWallet"/>
 </LinearLayout>


</RelativeLayout>