<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_tool"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/splash_color">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/layutmenu">
    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_bars"
        android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="5"
        android:layout_toRightOf="@id/layutmenu">


        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/icon_background">



            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_horizontal"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_horizontal"
                android:src="@drawable/ic_home_blue_" />

        </LinearLayout>

        <TextView
            android:id="@+id/toolTitleWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:gravity="center|center_vertical"
            android:text="Weload Driver"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/layout_File_blue"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFileWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/icon_background"


                android:src="@drawable/ic_job_details_blue"
                />

          <!--  <ImageView
                android:id="@+id/ivFileWhiteBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_view_background"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_file_alt_solid" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutJobStatus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivJobStatusWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_background"
                android:src="@drawable/ic_job_proccess_blue" />

            <ImageView
                android:id="@+id/ivJobStatusWhiteBackground"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_view_background"
                android:padding="5dp"
                android:src="@drawable/ic_file_alt_solid_white"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMap"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMapMarkerWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/icon_background"
                android:src="@drawable/ic_location_blue" />

            <ImageView
                android:id="@+id/ivMapMarkerBlue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_view_background"
                android:src="@drawable/ic_location_white"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTooltitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center|center_vertical"
        android:text="Weload   Driver"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>